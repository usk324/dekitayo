<div class="reward-index-container">
  <div class="reward-header row">
    <div class="col-4"></div>
    <div class="reward-header-name col-4">
      <i class="fa-regular fa-star" style="color: #ffc342;"></i>
      <h1><strong>REWARDS</strong></h1>
      <i class="fa-regular fa-star" style="color: #ffc342;"></i>
    </div>
    <div class="col-3"></div>
    <div class="child-coins col-1">
      <i class="fa-solid fa-circle pe-3" style="color: #f5cb56;"></i>
      <span><%= current_child.coins %></span>
    </div>
  </div>
  <div class="rewards-container">
    <div class="row">
      <% @rewards.each do |reward| %>
        <div class="modal fade" id="rewardModal<%= reward.id %>" tabindex="-1"            aria-labelledby="rewardModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="rewardModalLabel"><%= reward.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body modal-body-content">
                <%= reward.description %>
                <p></p>
                <div class="modal-content-bottom">
                  <div class="modal-content-price">
                    <i class="fa-solid fa-circle me-2" style="color: #f5cb56;"></i>
                    <span class="text-black">  <%= reward.price %></span>
                  </div>
                  <%= reward.inventory %> left
                </div>
              </div>
              <div class="modal-footer" data-controller="purchase-reward favorite-reward">
                <%= simple_form_for(current_child) do |f| %>
                  <input type="hidden" value="<%= reward.id %>%" name="child[favorite_reward]">
                  <button type="submit" class="btn btn-primary" data-action="click->favorite-reward#favorite">Favorite this reward</button>
                <% end %>
                <%= simple_form_for([reward, ClaimedReward.new]) do |f| %>
                  <input type="hidden" value="<%= current_child.id %>" name="child_id">
                  <button type="submit" class="btn btn-primary" data-action="click->purchase-reward#purchase"
                  <%= reward.inventory.zero? || reward.price > current_child.coins ? "disabled" : '' %>> Purchase this reward</button>
                <% end %>

                <%# are you sure? %>
                <%# parent needs a notification that a reward was bought %>
              </div>
            </div>
          </div>
        </div>
        <li class="col-4 d-flex justify-content-center">
          <%#= link_to '#', data: { bs_toggle: "modal", bs_target: "#rewardModal#{reward.id}" } do %>
           <div class="reward-card mb-5" data-bs-toggle="modal" data-bs-target="#rewardModal<%= reward.id %>">
            <div class="flex-grow-1 justify-content-center reward-card-top <%= reward.inventory.zero? ? 'disabled-reward' : '' %>">
              <h3><strong><%= reward.name %></strong>
              <% if reward.id == current_child.favorite_reward %>
                <i class="fa-solid fa-star" style="color: #ffed75;"></i>
              <% end %>
              </h3>
              <%= image_tag @random_images.sample %>
            </div>
            <div class="d-flex">
              <%# <div class="coin-container">
                <div class="coin">
                  <div class="front jump">
                    <div class="coin-star"></div>
                    <span class="coin-currency">Â¥</span>
                    <div class="shapes">
                      <div class="shape_l"></div>
                      <div class="shape_r"></div>
                      <span class="coin-top"></span>
                      <span class="coin-bottom"></span>
                    </div>
                  </div>
                  <div class="coin-shadow"></div>
                </div>
              </div> %>
              <i class="fa-solid fa-circle" style="color: #f5cb56;"></i>
              <span class="text-black"><%= reward.price %></span>
            </div>
          </div>
          <%# end %>
        </li>
      <% end %>
    </div>
  </div>
</div>
<%# when reward inventory 0, box is grayed out %>
<%# when reward is favorited, star icon on bottom right %>
